+struct flac_encoder {
+	FLAC__StreamEncoder *encoder;
+};
+
+int flac_encode_init(flac_encoder **pf, flac_conf *conf)
+{
+	flac_encoder *f;
+	int r;
+
+	if (NULL == (f = calloc(1, sizeof(flac_encoder))))
+		return FLAC_ERR(FLAC_E_WSTATE, FLAC__STREAM_ENCODER_MEMORY_ALLOCATION_ERROR);
+
+	if (NULL == (f->encoder = FLAC__stream_encoder_new())) {
+		free(f);
+		return FLAC_ERR(FLAC_E_WSTATE, FLAC__STREAM_ENCODER_MEMORY_ALLOCATION_ERROR);
+	}
+
+	f->encoder->protected_->bits_per_sample = conf->bps;
+	f->encoder->protected_->channels = conf->channels;
+	f->encoder->protected_->sample_rate = conf->rate;
+	f->encoder->protected_->do_md5 = !conf->nomd5;
+	FLAC__stream_encoder_set_compression_level(f->encoder, conf->level);
+
+	if (0 != (r = init_stream_internal_(f->encoder, NULL, NULL, NULL, NULL, NULL, NULL, 0))) {
+		int e;
+		if (r == FLAC__STREAM_ENCODER_INIT_STATUS_ENCODER_ERROR)
+			e = FLAC_ERR(FLAC_E_WSTATE, f->encoder->protected_->state);
+		else
+			e = FLAC_ERR(FLAC_E_WINIT, r);
+		flac_encode_free(f);
+		return e;
+	}
+
+	*pf = f;
+	return 0;
+}
+
+void flac_encode_free(flac_encoder *f)
+{
+	FLAC__stream_encoder_delete(f->encoder);
+	free(f);
+}
+
+void flac_encode_info(flac_encoder *f, flac_conf *info)
+{
+	const FLAC__StreamMetadata_StreamInfo *si = &f->encoder->private_->streaminfo.data.stream_info;
+	info->min_blocksize = si->min_blocksize;
+	info->max_blocksize = si->max_blocksize;
+	info->min_framesize = si->min_framesize;
+	info->max_framesize = si->max_framesize;
+	memcpy(info->md5, si->md5sum, sizeof(info->md5));
+}
+
+int flac_encode(flac_encoder *f, const int * const *audio, unsigned int *samples, char **buf)
+{
+	int n;
+
+	if (*samples != 0) {
+		n = FLAC__stream_encoder_process(f->encoder, audio, *samples);
+		if (n == -1)
+			return FLAC_ERR(FLAC_E_WSTATE, f->encoder->protected_->state);
+
+	} else {
+		n = f->encoder->private_->current_sample_number;
+		FLAC__stream_encoder_finish(f->encoder);
+	}
+
+	const FLAC__byte *out_buffer;
+	size_t bytes;
+	if (!FLAC__bitwriter_get_buffer(f->encoder->private_->frame, &out_buffer, &bytes))
+		return FLAC_ERR(FLAC_E_WSTATE, FLAC__STREAM_ENCODER_MEMORY_ALLOCATION_ERROR);
+	FLAC__bitwriter_clear(f->encoder->private_->frame);
+
+	if (bytes != 0) {
+		f->encoder->private_->streaminfo.data.stream_info.min_framesize = flac_min(bytes, f->encoder->private_->streaminfo.data.stream_info.min_framesize);
+		f->encoder->private_->streaminfo.data.stream_info.max_framesize = flac_max(bytes, f->encoder->private_->streaminfo.data.stream_info.max_framesize);
+	}
+
+	*buf = (void*)out_buffer;
+	*samples = n;
+	return bytes;
+}
